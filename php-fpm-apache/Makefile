#!/usr/bin/make -f

REGISTRY=srijanlabs/aph-fpm-apache

define build_image
	docker build --no-cache --build-arg PHP_TAG=${1} -t $(REGISTRY):${1}-1.x .
endef

define push_image
	# Pushing production images.
	docker push $(REGISTRY):${1}-1.x
	docker push $(REGISTRY):${1}-1.x

endef

build:
	# $(call build_image,7.2)
	$(call build_image,7.3-1.x)
	# $(call build_image,7.4)

push:
	# $(call push_image,7.2)
	$(call push_image,7.3-1.x)
	# $(call push_image,7.4)

.PHONY: *
